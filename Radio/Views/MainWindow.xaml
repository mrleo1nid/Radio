<Window x:Class="Radio.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Radio"
        xmlns:vm="clr-namespace:Radio.ViewModels"
        xmlns:user="clr-namespace:Radio.Views.UserControls"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:behaviors="clr-namespace:Radio.Behaviors"
        mc:Ignorable="d"
        Title="Radio" Height="450" Width="800">
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
    <Window.Background>
        <ImageBrush ImageSource="{Binding PlaylistsVM.SelectedPlaylist.BackgroundImagePath}"/>
    </Window.Background>
    <i:Interaction.Behaviors>
        <behaviors:MainWindowBehavior />
    </i:Interaction.Behaviors>
    <Window.Resources>
        <ContextMenu x:Key="TrayMenu">
            <MenuItem Header="Hide" Command="{Binding ShowHideWindowCommand}" />
            <MenuItem Header="Item2" />
            <Separator />
            <MenuItem Header="Exit" Command="{Binding MenuExitWindowComman}" />
        </ContextMenu>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="7*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="399*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Grid.ColumnSpan="2">
            <ComboBox HorizontalAlignment="Left" Width="120">
             <ComboBoxItem Width="120">
                 <Button Command="{Binding OpenDopWindowCommand}" Content="Дополнительно"></Button>
             </ComboBoxItem>
            </ComboBox>
        </StackPanel>
        <Grid Grid.Column="0" Grid.Row="1">
            <user:PlaylistView DataContext="{Binding PlaylistsVM}"/>
        </Grid>
        <Grid Grid.Column="1" Grid.Row="1">
            <user:PlayerView DataContext="{Binding PlaylistsVM}"/>
        </Grid>
    </Grid>
</Window>
