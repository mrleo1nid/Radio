<Window x:Class="Radio.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Radio"
        xmlns:vm="clr-namespace:Radio.ViewModels"
        xmlns:user="clr-namespace:Radio.Views.UserControls"
        xmlns:res="clr-namespace:Radio.Properties" 
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:behaviors="clr-namespace:Radio.Behaviors"
        xmlns:tb="clr-namespace:Hardcodet.Wpf.TaskbarNotification;assembly=Hardcodet.Wpf.TaskbarNotification"
        mc:Ignorable="d"
        Title="Radio" Height="450" Width="800">
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
    <Window.Background>
        <ImageBrush ImageSource="{Binding PlaylistsVM.SelectedPlaylist.BackgroundImagePath}"/>
    </Window.Background>
    <i:Interaction.Behaviors>
        <behaviors:MainWindowBehavior />
    </i:Interaction.Behaviors>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="7*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="399*"/>
        </Grid.RowDefinitions>
        <tb:TaskbarIcon  ToolTipText="Radio">
            <i:Interaction.Behaviors>
                <behaviors:NotifyIconBehavior />
            </i:Interaction.Behaviors>
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Показать/Скрыть"
                              Command="{Binding ShowHideMainWindCommand}"
                              CommandParameter="{Binding}">
                    </MenuItem>
                    <Separator />
                    <MenuItem Header="Play/Pause"
                              Command="{Binding PlaylistsVM.PlayCommand}"
                              CommandParameter="{Binding}">
                    </MenuItem>
                    <MenuItem Header="Следующий"
                              Command="{Binding PlaylistsVM.NextCommand}"
                              CommandParameter="{Binding}">
                    </MenuItem>
                    <MenuItem Header="Предыдущий"
                              Command="{Binding PlaylistsVM.PreviousCommand}"
                              CommandParameter="{Binding}">
                    </MenuItem>
                    <Separator />
                    <MenuItem Header="Выход"
                              Command="{Binding CloseProgrammCommand}"
                              CommandParameter="{Binding}">
                    </MenuItem>
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>
        <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
            <ComboBox HorizontalAlignment="Left" Width="120" Text="Дополнительно" SelectedIndex="0">
             <ComboBoxItem Width="120">
                    <Button Width="120" Command="{Binding OpenDopWindowCommand}" Content="Настройки"></Button>
             </ComboBoxItem>
            </ComboBox>
        </StackPanel>
        <Grid Grid.Column="0" Grid.Row="1">
            <user:PlaylistView DataContext="{Binding PlaylistsVM}"/>
        </Grid>
        <Grid Grid.Column="1" Grid.Row="1">
            <user:PlayerView DataContext="{Binding PlaylistsVM}"/>
        </Grid>
    </Grid>
</Window>
